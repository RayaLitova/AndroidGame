<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    tools:visibility="gone">

    <Button
        android:id="@+id/menu"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="43dp"
        android:layout_height="45dp"
        android:text="..."
        android:textSize="12sp"
        android:visibility="visible"
        app:backgroundTint="#FFC107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/menu_wdgt"
        android:layout_width="147dp"
        android:layout_height="386dp"
        android:background="#FFC107"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu"
        app:layout_constraintVertical_bias="0.483"
        tools:visibility="visible" />

    <Button
        android:id="@+id/store_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Store"
        android:textSize="18sp"
        android:visibility="gone"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/menu_wdgt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_wdgt"
        tools:visibility="visible" />

    <Button
        android:id="@+id/settings_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/menu_wdgt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/store_btn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/shop_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/menu_wdgt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_btn"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

